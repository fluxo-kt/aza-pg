{
  // Oxlint Configuration (SOTA)
  // Oxlint is 50-100x faster than ESLint with 600+ rules
  // Docs: https://oxc.rs/docs/guide/usage/linter/config.html

  "env": {
    "node": true,
    "es2024": true
  },

  "globals": {
    // Bun runtime globals
    "Bun": "readonly"
  },

  "rules": {
    // Disable rules with useless warnings that bring no value:

    // Sequential async operations are intentional and correct
    "eslint/no-await-in-loop": "off"
  },

  "ignorePatterns": ["node_modules/", ".archived/", "dist/", "coverage/", ".tsbuildinfo"]
}
