# PostgreSQL Configuration
POSTGRES_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD_32_CHARS
POSTGRES_DB=main
POSTGRES_USER=postgres
POSTGRES_MEMORY=5GB
POSTGRES_WORKLOAD_TYPE=web    # Options: mixed|web|oltp|dw
POSTGRES_STORAGE_TYPE=ssd     # Options: ssd|hdd|san

# PgBouncer Configuration
PGBOUNCER_POOL_MODE=transaction    # Options: session|transaction|statement
PGBOUNCER_DEFAULT_POOL_SIZE=25
PGBOUNCER_MAX_CLIENT_CONN=2000

# Monitoring Configuration
MONITORING_USER=monitoring
MONITORING_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD_32_CHARS
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD_32_CHARS
GRAFANA_ROOT_URL=http://grafana.yourdomain.com

# GitHub Container Registry
GITHUB_USERNAME=yourusername

# Hetzner S3 Configuration (for Postgresus backups - configure in Postgresus UI)
S3_ENDPOINT=fsn1.your-objectstorage.hetzner.cloud
S3_BUCKET=aza-pg-backups-experimental
S3_ACCESS_KEY=CHANGE_ME
S3_SECRET_KEY=CHANGE_ME

# Domain Configuration
GRAFANA_DOMAIN=grafana.yourdomain.com
POSTGRESUS_DOMAIN=postgresus.yourdomain.com

# === INSTRUCTIONS ===
# 1. Copy this file to .env: cp .env.example .env
# 2. Generate secure passwords:
#    openssl rand -base64 32
# 3. Update all CHANGE_ME values
# 4. Set your GITHUB_USERNAME
# 5. Update domain names
# 6. DO NOT commit .env to git (already in .gitignore)
