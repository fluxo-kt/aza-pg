{
  "name": "aza-pg",
  "version": "1.0.0",
  "description": "Production-Ready PostgreSQL 18 Infrastructure Stack with 38 extensions",
  "type": "module",
  "private": true,
  "scripts": {
    "lint": "oxlint .",
    "lint:fix": "oxlint --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "validate": "bun scripts/validate.ts --fast",
    "validate:full": "bun scripts/validate.ts --all",
    "generate": "bun scripts/config-generator/generator.ts",
    "check:docs": "bun scripts/check-docs-consistency.ts",
    "hooks:install": "bun-git-hooks install",
    "hooks:uninstall": "bun-git-hooks uninstall"
  },
  "devDependencies": {
    "@types/bun": "^1.3.2",
    "arktype": "^2.1.25",
    "bun-git-hooks": "^0.3.1",
    "oxlint": "^0.11.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "yaml-lint": "^1.7.0"
  },
  "engines": {
    "bun": ">=1.3.0"
  },
  "keywords": [
    "postgresql",
    "postgres",
    "database",
    "docker",
    "pgbouncer",
    "extensions",
    "infrastructure",
    "production"
  ],
  "author": "aza-pg",
  "license": "MIT"
}
