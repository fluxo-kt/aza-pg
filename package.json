{
  "name": "aza-pg",
  "version": "1.0.0",
  "description": "Production-Ready PostgreSQL 18 Infrastructure Stack with extensions and tools",
  "type": "module",
  "author": "Art Shendrik",
  "license": "MIT",
  "scripts": {
    "============== BUILD ==============": "",
    "build": "bun scripts/build.ts",
    "============== STATIC CHECKS (no Docker, fast) ==============": "",
    "lint": "oxlint .",
    "lint:fix": "oxlint --fix .",
    "lint:sql": "bun run format:sql && bun scripts/check-sql.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:sql": "bun scripts/format-sql.ts --write",
    "type-check": "tsc --noEmit",
    "check:static": "bun scripts/validate.ts --fast",
    "check:static:all": "bun scripts/validate.ts --all",
    "check:docs": "bun scripts/check-docs-consistency.ts",
    "check:manifest": "bun scripts/validate-manifest.ts",
    "check:base-image": "bun scripts/validate-base-image-sha.ts",
    "check:size": "bun scripts/check-size-regression.ts",
    "check:shell": "find ./docker/postgres ./stacks -name '*.sh' -type f -print0 | xargs -0 shellcheck",
    "check:yaml": "docker run --rm -v \"$(pwd):/work:ro\" cytopia/yamllint -c /work/.yamllint /work/.github /work/stacks /work/docker /work/examples /work/scripts",
    "check:docker": "hadolint --config .hadolint.yaml docker/postgres/Dockerfile",
    "check:all": "bun check:docs && bun check:manifest && bun check:base-image && bun check:size && bun check:shell && bun check:yaml && bun check:docker && bun lint:sql",
    "============== UNIT TESTS (no Docker, fast) ==============": "",
    "test:unit": "bun test ./scripts/config-generator/manifest-generator.test.ts ./scripts/test/test-auto-config-units.ts ./scripts/test/test-utils.test.ts",
    "test:unit:manifest": "bun test ./scripts/config-generator/manifest-generator.test.ts",
    "test:unit:autoconfig": "bun test ./scripts/test/test-auto-config-units.ts",
    "test:unit:utils": "bun test ./scripts/test/test-utils.test.ts",
    "============== FUNCTIONAL TESTS (require Docker image) ==============": "",
    "test:smoke": "bun scripts/test-smoke.ts",
    "test:extensions": "bun scripts/test/test-extensions.ts",
    "test:extensions:smoke": "bun scripts/test/run-extension-smoke.ts",
    "test:extensions:disabled": "bun scripts/test/test-disabled-extensions.ts",
    "test:extensions:combinations": "bun scripts/test/test-integration-extension-combinations.ts",
    "test:hooks": "bun scripts/test/test-hook-extensions.ts",
    "test:autoconfig": "bun scripts/test/test-auto-config.ts",
    "test:security": "bun test scripts/test/test-security.test.ts",
    "test:negative": "bun test scripts/test/test-negative-scenarios.ts",
    "test:image": "bun scripts/docker/test-image.ts",
    "============== REGRESSION TESTS (require Docker, comprehensive) ==============": "",
    "test:regression:core": "bun scripts/test/test-postgres-core-regression.ts",
    "test:regression:extensions": "bun scripts/test/test-extension-regression.ts",
    "test:regression:interactions": "bun scripts/test/test-extension-interactions.ts",
    "test:regression:all": "bun scripts/test/run-all-regression-tests.ts",
    "test:regression:production": "TEST_MODE=production bun test:regression:all",
    "test:regression:comprehensive": "TEST_MODE=regression bun test:regression:all",
    "============== FULL VALIDATION (static + unit + functional) ==============": "",
    "validate": "echo '⚠️  STATIC ONLY - use test:full for comprehensive testing' && bun check:static",
    "validate:full": "echo '⚠️  STATIC ONLY - use test:full for comprehensive testing' && bun check:static:all",
    "validate:parallel": "bun scripts/validate.ts --all --parallel",
    "validate:artifacts": "bun scripts/docker/validate-published-image-artifacts.ts",
    "test:all": "bun scripts/test-all.ts",
    "test:all:fast": "bun scripts/test-all.ts --fast",
    "test:full": "bun check:static && bun test:unit && bun test:hooks && bun test:extensions && bun test:autoconfig && bun test:security",
    "============== VERIFICATION (require running container) ==============": "",
    "verify:runtime": "bun scripts/docker/verify-runtime.ts",
    "verify:filesystem": "bun scripts/docker/verify-filesystem.ts",
    "verify:generated": "bun scripts/verify-generated.ts",
    "============== CODE GENERATION ==============": "",
    "generate": "bun generate:manifest && bun generate:extension-defaults && bun generate:configs && bun generate:docs && bun generate:markdown && bun generate:dockerfile && bun generate:entrypoint",
    "generate:manifest": "bun scripts/extensions/generate-manifest.ts",
    "generate:extension-defaults": "bun scripts/extensions/generate-extension-defaults.ts",
    "generate:configs": "bun scripts/config-generator/generator.ts",
    "generate:docs": "bun scripts/generate-docs-data.ts",
    "generate:markdown": "bun scripts/extensions/render-markdown.ts",
    "generate:dockerfile": "bun scripts/docker/generate-dockerfile.ts",
    "generate:entrypoint": "bun scripts/docker/generate-entrypoint.ts",
    "============== GIT HOOKS ==============": "",
    "hooks:install": "bun-git-hooks",
    "hooks:uninstall": "bun-git-hooks uninstall",
    "postinstall": "bun-git-hooks"
  },
  "devDependencies": {
    "@bun-security-scanner/osv": "^1.0.0",
    "@types/bun": "^1.3.3",
    "arktype": "^2.1.27",
    "bun-git-hooks": "^0.3.1",
    "oxlint": "^1.29.0",
    "prettier": "^3.6.2",
    "sql-formatter": "^15.6.10",
    "squawk-cli": "^2.30.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "bun": ">=1.3.0"
  },
  "keywords": [
    "postgresql",
    "postgres",
    "database",
    "docker",
    "pgbouncer",
    "extensions",
    "infrastructure",
    "production"
  ]
}
