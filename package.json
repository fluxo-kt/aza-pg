{
  "name": "aza-pg",
  "version": "1.0.0",
  "description": "Production-Ready PostgreSQL 18 Infrastructure Stack with 38 extensions",
  "type": "module",
  "private": true,
  "scripts": {
    "lint": "oxlint .",
    "lint:fix": "oxlint --fix .",
    "lint:shell": "find . -name '*.sh' -not -path './node_modules/*' -not -path './.git/*' -not -path './.archived/*' -exec shellcheck {} +",
    "lint:docker": "docker run --rm -i hadolint/hadolint < docker/postgres/Dockerfile",
    "lint:yaml": "bunx yaml-lint '**/*.{yml,yaml}' --ignore='node_modules/**'",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "validate": "bun run lint && bun run format:check && bun run type-check",
    "validate:full": "bun run lint && bun run lint:shell && bun run lint:docker && bun run lint:yaml && bun run format:check && bun run type-check",
    "hooks:install": "bun-git-hooks install",
    "hooks:uninstall": "bun-git-hooks uninstall"
  },
  "devDependencies": {
    "@types/bun": "^1.3.2",
    "@types/node": "^24.10.0",
    "arktype": "^2.1.25",
    "bun-git-hooks": "^0.3.1",
    "oxlint": "^0.11.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "yaml-lint": "^1.7.0"
  },
  "engines": {
    "bun": ">=1.3.0",
    "node": ">=24.0.0"
  },
  "workspaces": [
    "scripts/config-generator"
  ],
  "keywords": [
    "postgresql",
    "postgres",
    "database",
    "docker",
    "pgbouncer",
    "extensions",
    "infrastructure",
    "production"
  ],
  "author": "aza-pg",
  "license": "MIT"
}
