{
  "name": "aza-pg",
  "version": "1.0.0",
  "description": "Production-Ready PostgreSQL 18 Infrastructure Stack with 38 extensions",
  "type": "module",
  "private": true,
  "scripts": {
    "lint": "oxlint .",
    "lint:fix": "oxlint --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "validate": "bun run lint && bun run format:check && bun run type-check",
    "hooks:install": "bun-git-hooks install",
    "hooks:uninstall": "bun-git-hooks uninstall"
  },
  "devDependencies": {
    "@types/bun": "^1.3.0",
    "@types/node": "^24.9.1",
    "bun-git-hooks": "^0.3.1",
    "oxlint": "^0.11.0",
    "prettier": "^3.4.1",
    "typescript": "^5.7.2"
  },
  "engines": {
    "bun": ">=1.3.0",
    "node": ">=24.0.0"
  },
  "workspaces": [
    "scripts/config-generator"
  ],
  "keywords": [
    "postgresql",
    "postgres",
    "database",
    "docker",
    "pgbouncer",
    "extensions",
    "infrastructure",
    "production"
  ],
  "author": "aza-pg",
  "license": "MIT"
}
