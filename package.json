{
  "name": "aza-pg",
  "version": "1.0.0",
  "description": "Production-Ready PostgreSQL 18 Infrastructure Stack with extensions and tools",
  "type": "module",
  "author": "Art Shendrik",
  "license": "MIT",
  "scripts": {
    "check": "bun scripts/validate.ts",
    "fix": "prettier --write . && oxlint --fix . && bun scripts/format-sql.ts --write && bun scripts/validate.ts",
    "test": "bun scripts/test-all.ts",
    "test:full": "bun scripts/test-all.ts",
    "build": "bun scripts/build.ts",
    "generate": "bun scripts/extensions/generate-manifest.ts && bun scripts/extensions/generate-extension-defaults.ts && bun scripts/config-generator/generator.ts && bun scripts/generate-docs-data.ts && bun scripts/extensions/render-markdown.ts && bun scripts/docker/generate-dockerfile.ts && bun scripts/docker/generate-entrypoint.ts",
    "test:unit": "bun test ./scripts/config-generator/manifest-generator.test.ts ./scripts/test/test-auto-config-units.ts ./scripts/test/test-utils.test.ts",
    "test:hooks": "bun scripts/test/test-hook-extensions.ts",
    "test:extensions": "bun scripts/test/test-extensions.ts",
    "test:security": "bun test scripts/test/test-security.test.ts",
    "check:manifest": "bun scripts/extensions/validate-manifest.ts",
    "check:docs": "bun scripts/check-docs-consistency.ts",
    "check:static": "bun scripts/validate.ts --fast",
    "check:all": "bun scripts/validate.ts --all",
    "lint": "oxlint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "hooks:install": "bun-git-hooks",
    "postinstall": "bun-git-hooks"
  },
  "devDependencies": {
    "@bun-security-scanner/osv": "^1.0.0",
    "@types/bun": "^1.3.3",
    "arktype": "^2.1.27",
    "bun-git-hooks": "^0.3.1",
    "oxlint": "^1.30.0",
    "prettier": "^3.6.2",
    "sql-formatter": "^15.6.10",
    "squawk-cli": "^2.31.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "bun": ">=1.3.0"
  },
  "keywords": [
    "postgresql",
    "postgres",
    "database",
    "docker",
    "pgbouncer",
    "extensions",
    "infrastructure",
    "production"
  ]
}
