# PostgreSQL Replica Configuration
# Copy this file to .env and customize

# Container Settings
POSTGRES_IMAGE=ghcr.io/fluxo-kt/aza-pg:pg18
POSTGRES_CONTAINER_NAME=postgres-replica

# Database Settings (must match primary)
POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_strong_password_here

# Replication Settings
PG_REPLICATION_USER=replicator
PG_REPLICATION_PASSWORD=your_replication_password_here

# Primary Server Connection (REQUIRED)
PRIMARY_HOST=10.0.0.10
PRIMARY_PORT=5432

# Network Binding (127.0.0.1 for local, 0.0.0.0 for network access)
# Note: Default port is 5433 to avoid conflict with local primary on same host
POSTGRES_BIND_IP=127.0.0.1
POSTGRES_PORT=5433

# Auto-Configuration (set to 'true' to disable auto-config and use static postgresql.conf)
POSTGRES_SKIP_AUTOCONFIG=false

# Resource Limits (adjust based on available RAM/CPU)
POSTGRES_MEMORY_LIMIT=512M
POSTGRES_MEMORY_RESERVATION=256M
POSTGRES_CPU_LIMIT=0.5
